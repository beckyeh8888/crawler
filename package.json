{
  "name": "site-content-crawler",
  "version": "1.0.0",
  "description": "A site-wide content crawler that extracts clean Markdown from web pages",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "server": "ts-node src/server.ts",
    "server:prod": "node dist/server.js",
    "clean": "rimraf dist"
  },
  "keywords": [
    "crawler",
    "scraper",
    "markdown",
    "readability"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "axios": "^1.6.5",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsdom": "^23.2.0",
    "p-queue": "^6.6.2",
    "playwright": "^1.40.1",
    "robots-parser": "^3.0.1",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.10.6",
    "@types/turndown": "^5.0.4",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
